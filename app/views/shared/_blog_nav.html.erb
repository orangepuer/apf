<header class="blog-header py-3">
  <div class="row flex-nowrap justify-content-between align-items-center">
    <div class="col-1 pt-1">
      <%= link_to 'Home', root_path, class: 'text-muted' %>
    </div>
    <div class="col-1 pt-1">
      <%= link_to 'About', about_me_path, class: 'text-muted' %>
    </div>
    <div class="col-1 pt-1">
      <%= link_to 'Contact', contact_path, class: 'text-muted' %>
    </div>
    <div class="col-1 pt-1">
      <%= link_to 'Blog', blogs_path, class: 'text-muted' %>
    </div>
    <div class="col-1 pt-1">
      <%= link_to 'Portfolio', portfolios_path, class: 'text-muted' %>
    </div>
    <div class="col-4 text-center">
      <a class="blog-header-logo text-dark" href="#">My Blog</a>
    </div>
    <div class="col-4 d-flex justify-content-end align-items-center">
      <%= login_helper 'btn btn-sm btn-outline-secondary' %>
    </div>
  </div>
</header>